<% include ./partials/header %>

		<section id="home">
			<div class="background"></div>
			<div class="rose_red"></div>
			<div class="flower_pink"></div>

			<% if(error && error.length>0) { %>
				<div class="error">
					<%= error %>
				</div>
			<% } %>
			<% if(success && success.length>0) { %>
				<div class="success">
					<%= success %>
				</div>
			<% } %>

			<div class="heading_container">
				<h1><%= NAME_A %> & <%= NAME_B %></h1>
				<h2>are getting married!
			</div>

			<div class="passcode_form">
				<form action="/confirm" method="POST">
					<label>Please enter the passcode:</label>
					<div class="same_line">
						<input type="text" name="code">	
						<button>Check</button>	
					</div>
					
				</form>
			</div>
		</section>
		

<% include ./partials/footer %>